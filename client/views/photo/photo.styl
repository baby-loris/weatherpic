.photo {
    position: relative;

    min-width: 700px;

    display: inline-block;
    text-align: left;

    margin: 20px;

    -webkit-animation: fadein 2s;
    -moz-animation: fadein 2s;
    animation: fadein 2s;

    &__reload {
        font-size:2em;

        position: absolute;
        right:20px;
        top:20px;

        color:#fff;
        cursor:pointer
    }

    &__profile {
        position: absolute;
        top: 20px;
        left: 20px;

        padding: 10px;

        background-color: rgba(46, 25, 20, 0.490196);
        color: #fff

        & h1 {
            margin-top: 0;
        }
    }

    &__tags {
        position: relative;

        padding-left: 20px;
        margin-top: 20px

        line-height: 20px;
    }

    &__tags .glyphicon-tag {
        position: absolute;
        left: 0;
        top: 4px
    }

    &__tag {
        margin-right: 0.7em;
    }
}

@keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

@-moz-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

@-webkit-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}
